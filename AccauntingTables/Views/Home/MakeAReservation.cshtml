
@{
    ViewData["Title"] = "MakeAReservation";
    Layout = "~/Views/Shared/__Layout.cshtml";
}

<!doctype html>
<html>
    <head>
        <title>Бронирование</title>
    </head>
    <body>
        <h3>Введите все данные</h3>
        <form method="post" action="/Home/Reservation">
            <table>
                <tr>
                    <td>Номер столика:</td>
                    <td><input type="text" readonly value="@ViewBag.TableNumber" name="TableNumber" /></td>
                </tr>
                <tr>
                    <td>Индивидуальный номер:</td>
                    <td><input type="text" readonly value="@ViewBag.OwnerID" name="IDOwner" /></td>
                </tr>
                <tr>
                    <td>Имя</td>
                    <td><input type="text" name="Name" /></td>
                </tr>
                <tr>
                    <td>Фамилия</td>
                    <td><input type="text" name="Surname" /></td>
                </tr>
                <tr>
                    <td>Отчество</td>
                    <td><input type="text" name="Patronymic" /></td>
                </tr>
                <tr>
                    <td rowspan="2"><input type="submit" value="Забронировать" /></td>
                </tr>
            </table>
        </form>
    </body>
</html>

